PVOID FindNT()
{
	ULONG n;
	PULONG q;
	PSYSTEM_MODULE_INFORMATION p;
	PVOID ntdll = NULL;
	ULONG i;

	ZwQuerySystemInformation( 11, &n, 0, &n);  //SystemModuleInformation
	q = (PULONG)ExAllocatePool(PagedPool, n);
	ZwQuerySystemInformation( 11, q, n * sizeof *q, 0);
	
